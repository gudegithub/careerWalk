


<div class="container">
  <div class="community-form-wrapper">

    <%= form_with model: @group ,local: true do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "タイトル", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :詳細%>
        <%= form.text_area :description, placeholder: "詳細", class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :イメージ画像 %><br/>
        <%= form.file_field :image %>
      </div>

      <%= form.submit "コミュニティを作成する", class: "btn btn-info" %>
    <% end %>


  </div>
</div>
