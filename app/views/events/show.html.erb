<div class="event_wrapper">
  <div class="container">
    <div class="main_content">
      <div class="event_title_wrap">
        <h2 class="event_show_title">
          <span class="event_date_budge">
            <p class="month">10月</p>
            <p class="day">22</p>
          </span>
          <%= @event.title %>
        </h2>
        <% if @event.image %>
          <div class="thumbnail" style="background-image: url(<%= @event.image %>)"></div>
        <% elsif @event.site == "doorkeeper" %>
          <div class="thumbnail">
            <%= image_tag("doorkeeper.png", style: "margin: 104px auto", width: "360px") %>
          </div>
        <% elsif @event.site == "connpass" %>
          <div class="thumbnail">
            <%= image_tag("connpass.png", style: "margin: 71px auto") %>
          </div>
        <% end %>
      </div>
      <div class="event_detail_wrap">
        <p class="event_detail"><%= icon "fas", "info-circle" %>イベント詳細</p>
        <div class="event_detail_content">
          <% if @event.site %>
            <%= link_to "詳細を確認する", @event.url, class: "event_detail_btn" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="side_content">
      <div class="event_location_wrap">
        <h3><%= icon "fas", "map-marker-alt", class: "mr-2" %>会場</h3>
        <p class="event_location"><%= @event.location %></p>
        <p class="event_address"><%= @event.address %></p>
        <div id="map"></div>
          <script>
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              handler.getMap().setZoom(15);
            });
          </script>
        </div>
      <div class="event_date_wrap">

      </div>
      <div class="event_owner_wrap">

      </div>
      <div class="event_paticipation_wrap">

      </div>
    </div>
  </div>
</div>
