<div class="mx-auto">
  <%= image_tag 'resource.png', class:"img-fluid" %>
  <% if !user_signed_in?  %>
    <div class="d-flex justify-content-center">
      <%= link_to "新規登録", new_user_registration_path, class: "btn--basic shadow-lg" %>
      <%= link_to "ログイン", new_user_session_path, class: "btn--basic shadow-lg" %>
    </div>
  <% end %>
  <h1 style="text-align: center; margin: 10vh 0;">勉強会一覧</h1>
  <% @events.each do |event| %>
    <div class="card" style="width: 100%;" onmouseover="over(this)" onmouseout="out(this)" onclick="location.href='<%= event.url %>'">
      <%- if event.image %>
        <%= image_tag (event.image), class: "card-img-top"  %> 
      <% end %>
      <div class="card-body">
        <p class="card-text" style="text-align: left"><%= event.location %></p>
        <h3 class="card-title vuc" style="text-align: center"><%= event.title %></h3>
        <p class="float-right"><%= event.date  %></p>
      </div>
    </div>
  <% end %>
  <%= paginate @events %>
</div>
