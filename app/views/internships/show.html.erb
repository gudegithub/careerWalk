<div class="internship-wrapper">
  <div class="container">
    <div class="internship-main">
      <% if @intern.image %>
        <%= image_tag (@intern.image), class:"img-fluid" %>
      <% else %>
        <%= image_tag 'noImg' , class:"img-fluid" %>
      <% end %>
      <h1 style="margin: 50px"><%= @intern.title  %></h1>
      <p style="text-align: right;"><%= @intern.company  %></p>
    </div>
    <div class="internship-menu" style="text-align:center;margin: 40px">
      <%= link_to "参加する", @intern.url, class: "btn btn-info" %>
    </div>
  </div>
</div>
